{
    "compilerOptions": {
        "outDir": "./dist/",
        "sourceMap": true,
        "strict": true,
        "noImplicitReturns": true,
        "noImplicitAny": true,
        "module": "es6",
        "moduleResolution": "node",
        "target": "es5",
        "allowJs": true,
        "lib": ["es2015", "dom"],
        "allowSyntheticDefaultImports": true,
        "typeRoots": ["./src/@types", "./node_modules/@types"]
    },
    "include": [
        "./src/server.ts"
    ]
}